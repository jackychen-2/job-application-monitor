# ── IMAP Configuration ─────────────────────────────────
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_app_password
EMAIL_FOLDER=INBOX

# ── Database ───────────────────────────────────────────
DATABASE_URL=sqlite:///job_monitor.db

# ── Scanning ───────────────────────────────────────────
MAX_SCAN_EMAILS=20
IMAP_TIMEOUT_SEC=30

# ── LLM Configuration ─────────────────────────────────
LLM_ENABLED=true
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=sk-...
LLM_TIMEOUT_SEC=45
COST_INPUT_PER_MTOK=0.15
COST_OUTPUT_PER_MTOK=0.60

# ── Server ─────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Logging ────────────────────────────────────────────
LOG_LEVEL=INFO
# LOG_FILE=job_monitor.log
